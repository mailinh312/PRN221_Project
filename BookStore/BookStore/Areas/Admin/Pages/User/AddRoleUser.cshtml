@page "/Admin/User/AddRoleUser"
@model BookStore.Areas.Admin.Pages.User.AddRoleUserModel
@using Microsoft.AspNetCore.Identity
@using BookStore.Models;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<!-- HEADER DESKTOP-->

<header class="header-desktop">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="header-wrap">
                <form class="form-header" asp-action="AuthorManagerModel" method="get">
                </form>

                <div class="header-button">
                    @{
                        if (SignInManager.IsSignedIn(User))
                        {
                            <div class="account-wrap">
                                <div class="account-item clearfix js-item-menu">
                                    <div class="image">
                                    </div>
                                    <div class="content">
                                        <a class="js-acc-btn" asp-page="/Account/Manage/Index">@UserManager.GetUserName(User)</a>
                                    </div>
                                    <div class="account-dropdown js-dropdown">
                                        <div class="account-dropdown__body">
                                            <div class="account-dropdown__item">
                                                <a asp-area="Identity" asp-page="/Account/Manage/Index">
                                                    <i class="zmdi zmdi-account"></i>Tài khoản
                                                </a>
                                            </div>
                                        </div>
                                        <div class="account-dropdown__footer">
                                            <a href="/logout">
                                                <i class="zmdi zmdi-power"></i>Đăng xuất
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</header>
<!--END HEADER DESKTOP-->
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

                <h1 class="title-5 m-b-35">Thiết lập quyền cho tài khoản</h1>

                <div class="row">
                    <div class="col-md-6">
                        <form id="set-password-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <label asp-for="RoleNamesOfUser" class="form-label"></label>
                                @Html.ListBoxFor(m => m.RoleNamesOfUser, Model.allRoles, new {
                                id = "id-select-roles",
                                @class = "form-control"
                                })
                                <span asp-validation-for="RoleNamesOfUser" class="text-danger"></span>
                            </div>

                            <button type="submit" class="w-100 btn btn-lg btn-primary">Cập nhật</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
